@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Cms.Core.Security
@using Code.Services
@using Code.Entities
@using Web.ViewModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject IMemberManager MemberManager
@inject IJobService JobService
@{
    Layout = null;

    var currentMember = await MemberManager.GetCurrentMemberAsync();
    string? memberName = null;

    if (currentMember != null)
    {
        memberName = currentMember.Name ?? currentMember.Email ?? "Bruger";
    }

    var jobsData = await JobService.GetAvailableJobsAsync(currentMember?.Email);

    var viewModel = new AvailableJobsViewModel
    {
        IsAuthenticated = jobsData.IsAuthenticated,
        MemberName = memberName,
        Jobs = jobsData.Jobs,
        TotalJobs = jobsData.TotalJobs,
        TotalAvailablePositions = jobsData.TotalAvailablePositions,
        SuccessMessage = TempData["SuccessMessage"] as string,
        ErrorMessage = TempData["ErrorMessage"] as string
    };
}
<!DOCTYPE html>
<html lang="da" class="h-full bg-slate-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ledige Stillinger - Blue Bridge Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Montserrat', sans-serif; }
        h1, h2, h3 { font-family: 'Playfair Display', serif; }
        .bg-blue-bridge { background-color: #23297A; }
        .text-blue-bridge { color: #23297A; }
        .bg-accent-yellow { background-color: #FFF000; }
        .border-blue-bridge { border-color: #23297A; }
    </style>
</head>
<body class="h-full">

@if (viewModel.IsAuthenticated)
{
    @await Html.PartialAsync("Partials/_Navigation")
}

<!-- Main Content -->
<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Ledige Stillinger</h1>
        <p class="mt-2 text-gray-600">Se ledige stillinger hos vores crews for Blue Bridge Festival 2026.</p>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(viewModel.SuccessMessage))
    {
        <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="ml-3 text-sm font-medium text-green-800">@viewModel.SuccessMessage</p>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(viewModel.ErrorMessage))
    {
        <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <p class="ml-3 text-sm font-medium text-red-800">@viewModel.ErrorMessage</p>
            </div>
        </div>
    }

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        <div class="bg-white shadow rounded-lg p-6 text-center">
            <div class="text-4xl font-bold text-blue-bridge">@viewModel.TotalJobs</div>
            <div class="text-sm text-gray-600 mt-1">Ledige stillinger</div>
        </div>
        <div class="bg-white shadow rounded-lg p-6 text-center">
            <div class="text-4xl font-bold text-green-600">@viewModel.TotalAvailablePositions</div>
            <div class="text-sm text-gray-600 mt-1">Ledige pladser</div>
        </div>
    </div>

    <!-- Jobs List -->
    @if (viewModel.Jobs.Any())
    {
        <div class="space-y-6">
            @foreach (var job in viewModel.Jobs.OrderBy(j => j.CrewName))
            {
                <div class="bg-white shadow rounded-lg overflow-hidden border-l-4 @(job.HasUserApplied ? "border-amber-500" : "border-blue-bridge")">
                    <div class="p-6">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <!-- Crew and Job Title -->
                                <div class="flex items-center mb-2">
                                    <div class="h-12 w-12 rounded-lg bg-blue-bridge flex items-center justify-center text-white text-lg font-bold mr-4">
                                        @(job.CrewName.Length > 0 ? job.CrewName[0].ToString().ToUpper() : "?")
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-bold text-gray-900">@job.JobTitle</h3>
                                        <a href="@job.CrewUrl" class="text-blue-bridge hover:underline text-sm font-medium">
                                            @job.CrewName &rarr;
                                        </a>
                                    </div>
                                </div>

                                <!-- Job Description -->
                                @if (!string.IsNullOrEmpty(job.JobDescription))
                                {
                                    <div class="mt-4 text-gray-700 prose prose-sm max-w-none">
                                        @Html.Raw(job.JobDescription)
                                    </div>
                                }

                                <!-- Available Positions -->
                                <div class="mt-4 flex items-center space-x-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                                        </svg>
                                        @job.AvailablePositions ledige pladser
                                    </span>
                                    <span class="text-sm text-gray-500">
                                        @job.FilledPositions af @job.TotalPositions pladser besat
                                    </span>
                                </div>

                                <!-- Application Status -->
                                @if (job.HasUserApplied)
                                {
                                    <div class="mt-4 p-3 bg-amber-50 border border-amber-200 rounded-lg">
                                        <div class="flex items-center">
                                            <svg class="h-5 w-5 text-amber-600 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            <span class="text-sm font-medium text-amber-800">
                                                @if (job.UserApplicationStatus == ApplicationStatus.Pending)
                                                {
                                                    <span>Du har ansøgt om denne stilling - Afventer behandling</span>
                                                }
                                                else if (job.UserApplicationStatus == ApplicationStatus.Accepted)
                                                {
                                                    <span class="text-green-800">Din ansøgning er blevet godkendt!</span>
                                                }
                                                else if (job.UserApplicationStatus == ApplicationStatus.Rejected)
                                                {
                                                    <span class="text-red-800">Din ansøgning blev desværre ikke godkendt</span>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Apply Button -->
                            <div class="ml-6">
                                @if (!viewModel.IsAuthenticated)
                                {
                                    <a href="/login?returnUrl=@Context.Request.Path" class="inline-flex items-center px-4 py-2 border border-blue-bridge text-blue-bridge text-sm font-medium rounded-md hover:bg-blue-bridge hover:text-white transition-colors">
                                        Log ind for at ansøge
                                    </a>
                                }
                                else if (job.HasUserApplied)
                                {
                                    @if (job.UserApplicationStatus == ApplicationStatus.Pending)
                                    {
                                        <form method="post" action="/umbraco/surface/JobApplicationSurface/WithdrawApplication" onsubmit="return confirm('Er du sikker på, at du vil trække din ansøgning tilbage?');">
                                            <input type="hidden" name="applicationId" value="@job.UserApplicationId" />
                                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-red-500 text-red-500 text-sm font-medium rounded-md hover:bg-red-500 hover:text-white transition-colors">
                                                Træk ansøgning tilbage
                                            </button>
                                        </form>
                                    }
                                }
                                else
                                {
                                    <button onclick="openApplyModal(@job.JobId, '@job.JobTitle', '@job.CrewName')" class="inline-flex items-center px-6 py-3 bg-accent-yellow text-blue-bridge text-sm font-bold rounded-md hover:opacity-90 transition-opacity uppercase tracking-wider">
                                        Ansøg nu
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- No jobs available -->
        <div class="bg-white shadow rounded-lg p-12 text-center">
            <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z" />
            </svg>
            <h3 class="mt-6 text-xl font-semibold text-gray-900">Ingen ledige stillinger lige nu</h3>
            <p class="mt-2 text-gray-600">Der er ingen ledige stillinger tilgængelige i øjeblikket. Kom tilbage senere.</p>
            @if (viewModel.IsAuthenticated)
            {
                <a href="/dashboard" class="mt-4 inline-block text-blue-bridge hover:opacity-80 font-semibold">
                    Tilbage til Min Side &rarr;
                </a>
            }
        </div>
    }
</main>

<!-- Application Modal -->
<div id="applyModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Ansøg om stilling</h3>
            <form method="post" action="/umbraco/surface/JobApplicationSurface/SubmitApplication" id="applyForm">
                <input type="hidden" name="JobId" id="modalJobId" />

                <div class="mb-4">
                    <p class="text-sm text-gray-700">
                        <strong>Stilling:</strong> <span id="modalJobTitle"></span>
                    </p>
                    <p class="text-sm text-gray-700">
                        <strong>Crew:</strong> <span id="modalCrewName"></span>
                    </p>
                </div>

                <div class="mb-4">
                    <label for="Message" class="block text-sm font-medium text-gray-700 mb-2">
                        Besked (valgfri)
                    </label>
                    <textarea
                        name="Message"
                        id="Message"
                        rows="4"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-bridge"
                        placeholder="Fortæl os hvorfor du vil arbejde i dette crew..."></textarea>
                </div>

                <div class="flex items-center justify-end space-x-3">
                    <button type="button" onclick="closeApplyModal()" class="px-4 py-2 text-gray-700 hover:text-gray-900 font-medium">
                        Annuller
                    </button>
                    <button type="submit" class="px-6 py-2 bg-accent-yellow text-blue-bridge font-bold rounded-md hover:opacity-90 uppercase tracking-wider">
                        Send ansøgning
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-slate-100 border-t border-slate-200 mt-12">
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="text-sm text-gray-500">
                &copy; @DateTime.Now.Year Blue Bridge Festival. Alle rettigheder forbeholdes.
            </div>
            <div class="mt-4 md:mt-0 flex space-x-6">
                <a href="/contact" class="text-sm text-gray-500 hover:text-gray-900">Kontakt</a>
                <a href="/privacy" class="text-sm text-gray-500 hover:text-gray-900">Privatlivspolitik</a>
                <a href="/help" class="text-sm text-gray-500 hover:text-gray-900">Hjælp</a>
            </div>
        </div>
    </div>
</footer>

<script>
    function openApplyModal(jobId, jobTitle, crewName) {
        document.getElementById('modalJobId').value = jobId;
        document.getElementById('modalJobTitle').textContent = jobTitle;
        document.getElementById('modalCrewName').textContent = crewName;
        document.getElementById('applyModal').classList.remove('hidden');
    }

    function closeApplyModal() {
        document.getElementById('applyModal').classList.add('hidden');
        document.getElementById('applyForm').reset();
    }

    // Close modal when clicking outside
    document.getElementById('applyModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeApplyModal();
        }
    });
</script>

</body>
</html>
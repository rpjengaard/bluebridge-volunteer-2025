@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Cms.Core.Security
@using Code.Services
@using Web.ViewModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BbvDashboard>
@inject IMemberManager MemberManager
@inject IDashboardService DashboardService
@{
    Layout = null;

    var currentMember = await MemberManager.GetCurrentMemberAsync();
    DashboardViewModel? dashboard = null;

    if (currentMember != null)
    {
        var data = await DashboardService.GetDashboardDataAsync(currentMember.Email!);
        if (data != null)
        {
            dashboard = new DashboardViewModel
            {
                Profile = new MemberProfileViewModel
                {
                    FirstName = data.Profile.FirstName,
                    LastName = data.Profile.LastName,
                    Email = data.Profile.Email,
                    Phone = data.Profile.Phone ?? string.Empty,
                    Birthdate = data.Profile.Birthdate,
                    PreviousWorkplaces = data.Profile.PreviousWorkplaces
                },
                HasAccepted2026 = data.HasAccepted2026,
                AcceptedDate = data.AcceptedDate,
                CrewWishes = data.CrewWishes.Select(c => new CrewViewModel
                {
                    Id = c.Id,
                    Name = c.Name,
                    Description = c.Description,
                    AgeLimit = c.AgeLimit,
                    Url = c.Url
                }).ToList(),
                AssignedCrews = data.AssignedCrews.Select(c => new CrewViewModel
                {
                    Id = c.Id,
                    Name = c.Name,
                    Description = c.Description,
                    AgeLimit = c.AgeLimit,
                    Url = c.Url
                }).ToList(),
                Shifts = data.Shifts.Select(s => new ShiftViewModel
                {
                    Id = s.Id,
                    CrewName = s.CrewName,
                    StartTime = s.StartTime,
                    EndTime = s.EndTime,
                    Location = s.Location,
                    Notes = s.Notes
                }).ToList()
            };
        }
    }
}
<!DOCTYPE html>
<html lang="da" class="h-full bg-slate-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Min Side - Blue Bridge Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Montserrat', sans-serif; }
        h1, h2, h3 { font-family: 'Playfair Display', serif; }
        .bg-blue-bridge { background-color: #23297A; }
        .text-blue-bridge { color: #23297A; }
        .bg-accent-yellow { background-color: #FFF000; }
        .border-blue-bridge { border-color: #23297A; }
    </style>
</head>
<body class="h-full">

@if (currentMember == null)
{
    <!-- Not logged in -->
    <div class="min-h-screen flex items-center justify-center bg-slate-50">
        <div class="text-center">
            <div class="h-12 w-auto bg-blue-bridge flex items-center justify-center text-white font-bold p-2 rounded mx-auto max-w-xs mb-8">
                BLUE BRIDGE <span class="ml-2 font-light text-xs tracking-widest uppercase">Portal</span>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Du skal være logget ind</h2>
            <p class="text-gray-600 mb-6">Log ind for at se dit dashboard</p>
            <a href="/login" class="inline-block bg-accent-yellow text-blue-bridge px-6 py-3 rounded-md font-bold uppercase tracking-wider hover:opacity-90">
                Log ind
            </a>
        </div>
    </div>
}
else if (dashboard == null)
{
    <!-- Error loading data -->
    <div class="min-h-screen flex items-center justify-center bg-slate-50">
        <div class="text-center">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Der opstod en fejl</h2>
            <p class="text-gray-600 mb-6">Kunne ikke hente dine data. Prøv igen senere.</p>
            <a href="/" class="text-blue-bridge hover:opacity-80 font-semibold">Gå til forsiden</a>
        </div>
    </div>
}
else
{
    @await Html.PartialAsync("Partials/_Navigation")

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- Welcome Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Hej, @dashboard.Profile.FirstName!</h1>
            <p class="mt-2 text-gray-600">Velkommen til din frivilligportal for Blue Bridge Festival 2026.</p>
            @if (dashboard.HasAccepted2026 && dashboard.AcceptedDate.HasValue)
            {
                <p class="mt-1 text-sm text-green-600">
                    <svg class="inline-block w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Du har bekræftet din deltagelse d. @dashboard.AcceptedDate.Value.ToString("d. MMMM yyyy", new System.Globalization.CultureInfo("da-DK"))
                </p>
            }
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Profile Section -->
            <div class="lg:col-span-1">
                <div class="bg-white shadow rounded-lg overflow-hidden">
                    <div class="bg-blue-bridge px-6 py-4">
                        <h2 class="text-xl font-bold text-white">Min profil</h2>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center mb-6">
                            <div class="h-16 w-16 rounded-full bg-slate-200 flex items-center justify-center text-blue-bridge text-2xl font-bold">
                                @(dashboard.Profile.FirstName.Length > 0 ? dashboard.Profile.FirstName[0].ToString().ToUpper() : "?")@(dashboard.Profile.LastName.Length > 0 ? dashboard.Profile.LastName[0].ToString().ToUpper() : "")
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-semibold text-gray-900">@dashboard.Profile.FullName</h3>
                                <p class="text-sm text-gray-500">Frivillig</p>
                            </div>
                        </div>

                        <dl class="space-y-4">
                            <div>
                                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wider">Email</dt>
                                <dd class="mt-1 text-sm text-gray-900">@dashboard.Profile.Email</dd>
                            </div>
                            @if (!string.IsNullOrEmpty(dashboard.Profile.Phone))
                            {
                                <div>
                                    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wider">Telefon</dt>
                                    <dd class="mt-1 text-sm text-gray-900">@dashboard.Profile.Phone</dd>
                                </div>
                            }
                            @if (dashboard.Profile.Birthdate.HasValue && dashboard.Profile.Birthdate.Value.Year > 1900)
                            {
                                <div>
                                    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wider">Fødselsdato</dt>
                                    <dd class="mt-1 text-sm text-gray-900">@dashboard.Profile.Birthdate.Value.ToString("d. MMMM yyyy", new System.Globalization.CultureInfo("da-DK"))</dd>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(dashboard.Profile.PreviousWorkplaces))
                            {
                                <div>
                                    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wider">Tidligere arbejdssteder</dt>
                                    <dd class="mt-1 text-sm text-gray-900">@dashboard.Profile.PreviousWorkplaces</dd>
                                </div>
                            }
                        </dl>

                        <div class="mt-6 pt-6 border-t border-gray-200">
                            <a href="/profile/edit" class="text-blue-bridge hover:opacity-80 text-sm font-semibold">
                                Rediger profil &rarr;
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Crews & Shifts Section -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Assigned Crews -->
                <div class="bg-white shadow rounded-lg overflow-hidden">
                    <div class="bg-green-600 px-6 py-4 flex items-center justify-between">
                        <h2 class="text-xl font-bold text-white">Mine crews</h2>
                        @if (dashboard.AssignedCrews.Any())
                        {
                            <span class="bg-white/20 text-white text-sm px-3 py-1 rounded-full">
                                @dashboard.AssignedCrews.Count @(dashboard.AssignedCrews.Count == 1 ? "crew" : "crews")
                            </span>
                        }
                    </div>
                    <div class="p-6">
                        @if (dashboard.AssignedCrews.Any())
                        {
                            <div class="grid gap-4">
                                @foreach (var crew in dashboard.AssignedCrews)
                                {
                                    <div class="border border-green-200 bg-green-50 rounded-lg p-4">
                                        <div class="flex items-start justify-between">
                                            <div>
                                                <h3 class="font-semibold text-gray-900">@crew.Name</h3>
                                                @if (!string.IsNullOrEmpty(crew.Description))
                                                {
                                                    <p class="mt-1 text-sm text-gray-600">@crew.Description</p>
                                                }
                                            </div>
                                            @if (!string.IsNullOrEmpty(crew.Url))
                                            {
                                                <a href="@crew.Url" class="text-green-700 hover:text-green-900 text-sm font-medium">
                                                    Se mere &rarr;
                                                </a>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-8">
                                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                                </svg>
                                <h3 class="mt-4 text-sm font-semibold text-gray-900">Ingen crews endnu</h3>
                                <p class="mt-1 text-sm text-gray-500">Du er ikke blevet tildelt et crew endnu. Vi vender tilbage snarest.</p>
                            </div>
                        }
                    </div>
                </div>

                @if (!dashboard.AssignedCrews.Any())
                {
                    <!-- Crew Wishes - Only shown when member has no assigned crews -->
                    <div class="bg-white shadow rounded-lg overflow-hidden">
                        <div class="bg-amber-500 px-6 py-4 flex items-center justify-between">
                            <h2 class="text-xl font-bold text-white">Mine crew-ønsker</h2>
                            @if (dashboard.CrewWishes.Any())
                            {
                                <span class="bg-white/20 text-white text-sm px-3 py-1 rounded-full">
                                    @dashboard.CrewWishes.Count @(dashboard.CrewWishes.Count == 1 ? "ønske" : "ønsker")
                                </span>
                            }
                        </div>
                        <div class="p-6">
                            @if (dashboard.CrewWishes.Any())
                            {
                                <div class="grid gap-3">
                                    @foreach (var crew in dashboard.CrewWishes)
                                    {
                                        <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg">
                                            <div class="flex items-center">
                                                <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                <span class="font-medium text-gray-900">@crew.Name</span>
                                            </div>
                                            <span class="text-xs text-gray-500">Afventer</span>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-8">
                                    <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                                    </svg>
                                    <h3 class="mt-4 text-sm font-semibold text-gray-900">Ingen crew-ønsker</h3>
                                    <p class="mt-1 text-sm text-gray-500">Du har ikke indsendt nogen crew-ønsker.</p>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Shifts -->
                <div class="bg-white shadow rounded-lg overflow-hidden">
                    <div class="bg-blue-bridge px-6 py-4 flex items-center justify-between">
                        <h2 class="text-xl font-bold text-white">Mine vagter</h2>
                        @if (dashboard.Shifts.Any())
                        {
                            <span class="bg-white/20 text-white text-sm px-3 py-1 rounded-full">
                                @dashboard.Shifts.Count @(dashboard.Shifts.Count == 1 ? "vagt" : "vagter")
                            </span>
                        }
                    </div>
                    <div class="p-6">
                        @if (dashboard.Shifts.Any())
                        {
                            <div class="space-y-4">
                                @foreach (var shift in dashboard.Shifts.OrderBy(s => s.StartTime))
                                {
                                    <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
                                        <div class="flex items-start justify-between">
                                            <div>
                                                <div class="flex items-center space-x-2">
                                                    <span class="text-sm font-semibold text-blue-bridge uppercase tracking-wider">@shift.FormattedDate</span>
                                                </div>
                                                <h3 class="mt-1 font-semibold text-gray-900">@shift.CrewName</h3>
                                                <p class="text-sm text-gray-600">@shift.FormattedTime (@shift.Duration)</p>
                                                @if (!string.IsNullOrEmpty(shift.Location))
                                                {
                                                    <p class="mt-1 text-sm text-gray-500">
                                                        <svg class="inline-block w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                                                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                                                        </svg>
                                                        @shift.Location
                                                    </p>
                                                }
                                            </div>
                                            <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                                                Planlagt
                                            </span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(shift.Notes))
                                        {
                                            <div class="mt-3 pt-3 border-t border-gray-100">
                                                <p class="text-sm text-gray-600">@shift.Notes</p>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-8">
                                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
                                </svg>
                                <h3 class="mt-4 text-sm font-semibold text-gray-900">Ingen vagter endnu</h3>
                                <p class="mt-1 text-sm text-gray-500">Dine vagter bliver vist her, når de er planlagt.</p>
                                @if (dashboard.AssignedCrews.Any())
                                {
                                    <a href="/schedule" class="mt-4 inline-block text-blue-bridge hover:opacity-80 text-sm font-semibold">
                                        Se vagtplanen &rarr;
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        @if (dashboard.AssignedCrews.Any() || dashboard.Shifts.Any())
        {
            <div class="mt-8 bg-white shadow rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Overblik</h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="text-center p-4 bg-slate-50 rounded-lg">
                        <div class="text-3xl font-bold text-blue-bridge">@dashboard.AssignedCrews.Count</div>
                        <div class="text-sm text-gray-600">Tildelte crews</div>
                    </div>
                    <div class="text-center p-4 bg-slate-50 rounded-lg">
                        <div class="text-3xl font-bold text-blue-bridge">@dashboard.Shifts.Count</div>
                        <div class="text-sm text-gray-600">Planlagte vagter</div>
                    </div>
                    <div class="text-center p-4 bg-slate-50 rounded-lg">
                        @{
                            var totalHours = dashboard.Shifts.Sum(s => (s.EndTime - s.StartTime).TotalHours);
                        }
                        <div class="text-3xl font-bold text-blue-bridge">@totalHours.ToString("0.#")</div>
                        <div class="text-sm text-gray-600">Timer i alt</div>
                    </div>
                    <div class="text-center p-4 bg-slate-50 rounded-lg">
                        <div class="text-3xl font-bold text-green-600">
                            @if (dashboard.HasAccepted2026)
                            {
                                <svg class="h-8 w-8 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                            }
                            else
                            {
                                <span class="text-gray-400">-</span>
                            }
                        </div>
                        <div class="text-sm text-gray-600">2026 status</div>
                    </div>
                </div>
            </div>
        }
    </main>

    <!-- Footer -->
    <footer class="bg-slate-100 border-t border-slate-200 mt-12">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-sm text-gray-500">
                    &copy; @DateTime.Now.Year Blue Bridge Festival. Alle rettigheder forbeholdes.
                </div>
                <div class="mt-4 md:mt-0 flex space-x-6">
                    <a href="/contact" class="text-sm text-gray-500 hover:text-gray-900">Kontakt</a>
                    <a href="/privacy" class="text-sm text-gray-500 hover:text-gray-900">Privatlivspolitik</a>
                    <a href="/help" class="text-sm text-gray-500 hover:text-gray-900">Hjælp</a>
                </div>
            </div>
        </div>
    </footer>
}

</body>
</html>
